 <div class="product-card"> 

  <figure class="product-card__image-container" >
    <img src={{ product.image |  asset_url }} alt="image" height="200" width="200" loading="lazy">
  </figure>

  <div class="product-card__body">

    <div class="product-card__info">
      <h3>{{ product.title }}</h3>
      <p>${{ product.price | upcase}} USD </p>
      {% if product.tags %}
        <ul class="product-card__info--tags">
          {% for tag in product.tags %}
            <li>{{ tag }}</li>
          {% endfor %}
        </ul>
      {% endif %}
    </div>

    <button class="button-cart">
      <i class="icon-cart"></i>
    </button>
    
  </div>
</div> 

